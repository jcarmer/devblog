<% if @articles.any? %>
    <h1>Articles</h1>
    <% @articles.each do |article| %>
        <div class="article-thumb">
            <div class="article-thumb-image-container">
                <div class="article-thumb-image-cell">
                    <%= link_to(article) do %>
                        <img style="max-height: 150px;"
                             src="<%= article.image.media.url(:medium) if article.image and article.image.media %>"/>
                    <% end %>
                </div>
            </div>
            <%= link_to(article, :class => "article-thumb-title") do %>
                <%= article.title %>
            <% end %>
        </div>
    <% end %>
<% end %>

<% if @projects.any? %>
    <h1>Projects</h1>
    <% @projects.each do |article| %>
        <div class="article-thumb">
            <div class="article-thumb-image-container">
                <div class="article-thumb-image-cell">
                    <%= link_to(article) do %>
                        <% image_tag article.image.media.url(:medium) if article.image and article.image.media %>
                    <% end %>
                </div>
            </div>
            <%= link_to(article, :class => "article-thumb-title") do %>
                <%= article.title %>
            <% end %>
        </div>
    <% end %>
<% end %>